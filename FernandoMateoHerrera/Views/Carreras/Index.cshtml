@model IEnumerable<FernandoMateoHerrera.Models.Carrera>

@{
    ViewData["Title"] = "Index";
}

<h1>Carreras</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-success">Crear Nuevo</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreCarrera)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Campus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semestre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCarrera)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Campus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semestre)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.CarreraId"><button type="button" class="btn btn-primary">Editar</button></a> |
                    <a asp-action="Details" asp-route-id="@item.CarreraId"><button type="button" class="btn btn-secondary">Detalles</button></a> |
                    <a asp-action="Delete" asp-route-id="@item.CarreraId"><button type="button" class="btn btn-danger">Eliminar</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
